{
  "name": "eggd_vcf_rescue",
  "title": "VCF Rescue",
  "summary": "Filter in low support variants on specified locations or recover filtered out variants",
  "properties": {
    "githubRelease": "1.0.0"
  },
  "dxapi": "1.0.0",
  "version": "1.0.0",
  "inputSpec": [
    {
      "name": "gvcf",
      "label": "genomic vcf",
      "class": "file",
      "optional": false,
      "patterns": [
        "*.vcf"
      ],
      "help": "Input genomic vcf"
    },
    {
      "name": "filtered_vcf",
      "label": "Filtered VCF",
      "class": "file",
      "optional": true,
      "patterns": [
        "*.vcf",
        "*.vcf.gz"
      ],
      "help": ""
    },
    {
      "name": "unfiltered_vcf",
      "label": "Unfiltered VCF",
      "class": "file",
      "optional": true,
      "patterns": [
        "*.vcf",
        "*.vcf.gz"
      ],
      "help": ""
    },
    {
      "name": "rescue_vcf",
      "class": "file",
      "optional": false,
      "patterns": [
        "*vcf.gz"
      ],
      "help": "Compressed rescue vcf"
    },
    {
      "name": "fasta_tar",
      "label": "Reference genome fasta and index",
      "class": "file",
      "optional": false,
      "patterns": ["*.fasta-index.tar.gz"],
      "help": "tar.gz containing genome.fa and genome.fa.fai. Must match reference genome build used.",
      "default":{
          "$dnanexus_link": {
            "project": "project-Fkb6Gkj433GVVvj73J7x8KbV",
            "id": "file-F3zxG0Q4fXX9YFjP1v5jK9jf"
          }
        }
    },
    {
      "name": "non_pass_rescue",
      "label": "non pass rescue",
      "class": "boolean",
      "optional": true,
      "help": "determines if to run as non-pass rescue, must be used with gvcf input"
    },
    {
      "name": "rescue_filtered",
      "label": "rescue filtered",
      "class": "boolean",
      "optional": true,
      "help": "determines if to run as rescuing filtered out variants, must be used with filtered and unfiltered vcf inputs"
    }
  ],
  "outputSpec": [
    {
      "name": "filtered_vcf",
      "class": "file",
      "patterns": [
        "*.vcf.gz"
      ],
      "help": ""
    }
  ],
  "runSpec": {
    "execDepends": [
    ],
    "distribution" : "Ubuntu",
    "release": "20.04",
    "version": "0",
    "file": "src/eggd_tso500_rescue.sh",
    "interpreter": "bash",
    "timeoutPolicy": {
      "*": {
        "hours": 1
      }
    },
    "assetDepends": [
      {
        "name": "htslib",
        "project": "project-Fkb6Gkj433GVVvj73J7x8KbV",
        "folder": "/app_assets/htslib/htslib_v1.15.0",
        "version": "1.15.0"
      }
    ]
  },
  "developers":[
    "org-emee_1"
  ],
  "authorizedUsers": [
    "org-emee_1"
  ],
  "access": {
    "allProjects":"UPLOAD",
    "network": [
      "*"
    ]
  },
  "regionalOptions": {
    "aws:eu-central-1": {
      "systemRequirements": {
        "*": {
          "instanceType": "mem1_ssd1_v2_x2"
        }
      }
    }
  }
}
